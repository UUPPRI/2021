function mkidx {
    cd $1
    printf -- '---\nlayout: "layout"\n---\n# 2021\n'      >  index.md
    for II in $(ls) ; do
        [ "$II" == "index.md" ] && continue
        [ -f $II ] && echo "* [$II]($II)"       >> index.md
        [ -d $II ] && echo "* [$II]($II/)"      >> index.md
        [ -d $II ] && $(mkidx $II)
    done

    cd ..
}

README="00-README-ls-alR"
cat > ${README}.md << EOF
---
layout: \"layout\"
---

<br>
# 2021
\`\`\`
EOF
ls -R >> ${README}.md
cat   >> ${README}.md << EOF
\`\`\`
EOF


for II in \
    ${README}.md \
    IDX           \
    KEPPRES       \
    PERPRES       \
    PP            \
    UI            \
; do
    [ -d $II ] && mkidx $II
done

exit 0

